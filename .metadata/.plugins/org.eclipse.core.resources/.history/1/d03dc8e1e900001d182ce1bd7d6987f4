package com.array;

public class ArrayOneDim {
	public static void main(String[] args) {
		// declare Array and fixing the size 5
		int a[] = new int[5];

		// size = 5; index (0-4)
		a[0] = 10;
		a[1] = 20;
		a[2] = 30;
		a[3] = 40;
		a[4] = 50;

		System.out.println("------Print specfic index of array");
		System.out.println(a[2]);

		System.out.println("--------Array Size-----------");
		int arrSize = a.length;
		System.out.println(arrSize);

		System.out.println("-----------Print Array using For loop--------");

		for (int i = 0; i < a.length; i++) {
			System.out.println(a[i]);
		}

		System.out.println("----------------------------");
		int dummy[] = a.clone();

		int dummySize = dummy.length;
		System.out.println(dummySize);

		dummy[2] = 300;
		dummy[3] = 400;
		
		for (int i : dummy) {
			System.out.println(i);
		}

	}

}
